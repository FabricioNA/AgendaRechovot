<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/custom_edittext_square">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/listImage"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/person"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/Nome_Completo"
            android:text="Nome Completo"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/listImage"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:id="@+id/desde"
            android:text="Desde:"
            android:textColor="@color/BlueIsrael"
            android:textSize="20sp"
            android:layout_toRightOf="@id/listImage"
            android:layout_below="@id/Nome_Completo"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/Data"
            android:text="Desde:"
            android:textSize="20sp"
            android:layout_toRightOf="@id/desde"
            android:layout_below="@id/Nome_Completo"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>